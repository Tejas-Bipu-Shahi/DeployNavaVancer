# Server Configuration
PORT=8000
NODE_ENV=production

# MongoDB Connection (use your MongoDB Atlas connection string in production)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/nawa_db?retryWrites=true&w=majority

# Frontend URL (update with your actual domain in production)
FRONTEND_URL=https://navatara.edu.np

# JWT Secret Keys (use strong random strings in production)
JWT_SECRET=change_this_to_a_long_random_string_in_production
ADMIN_JWT_SECRET=change_this_to_a_different_long_random_string
TEACHER_JWT_SECRET=change_this_to_another_different_long_random_string

# Cookie settings
COOKIE_DOMAIN=navatara.edu.np
COOKIE_SECURE=true

# File upload settings
MAX_FILE_SIZE=10485760 # 10MB
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document

# Email Configuration (if needed)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@navatara.edu.np
SMTP_PASS=your_smtp_password
EMAIL_FROM=Nawa Tara School <noreply@navatara.edu.np> 